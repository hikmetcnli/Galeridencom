@{
    Layout = null;
}

@using Galeriden_com.Models
@model User

<html>
<head>
    <title>Register</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

</head>

<body>



    @using (@Html.BeginForm("Register", "Login", FormMethod.Post))
    {
        <div class="container">
            <div class="row" style="margin-top:200px">
                <div class="col-md-3">
                </div>

                <div class="col-md-6">

                    <div class="login-form">
                        <h3>Galeriden.com Müşteri Kayıt Formu</h3>
                        <hr />
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="Email" id="Email" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="Password" id="Password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label>Re-Password</label>
                            <input type="password" class="form-control" name="RePassword" id="RePassword" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        <strong style="color:red">@ViewBag.Message</strong>

                    </div>
                </div>


                <div class="col-md-3">          </div>
            </div>


        </div>

    }
</body>
</html>
