@using Galeriden_com.Models

@model Musteri

@using (@Html.BeginForm("Create", "Musteri", FormMethod.Post))
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-center">Müşteri Bilgileri</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            @Html.LabelFor(Model => Model.Id, new { @class = "form-label" })
                            @Html.TextBoxFor(Model => Model.Id, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(Model => Model.Adi, new { @class = "form-label" })
                            @Html.TextBoxFor(Model => Model.Adi, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(Model => Model.Soyadi, new { @class = "form-label" })
                            @Html.TextBoxFor(Model => Model.Soyadi, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(Model => Model.Adres, new { @class = "form-label" })
                            @Html.TextBoxFor(Model => Model.Adres, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(Model => Model.Telefon, new { @class = "form-label" })
                            @Html.TextBoxFor(Model => Model.Telefon, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}